{
  "linters": {
    "Temporary ignore": {
      "type": "nolint"
    },
    "Merge conflicts": {
      "type": "merge-conflict"
    },
    "File permissions": {
      "type": "chmod"
    },
    "Generic whitespace linting": {
      "type": "text",
      "include": [
        "(\\.php$)",
        "(\\.js$)",
        "(\\.css$)",
        "(\\.html$)",
        "(\\.htm$)",
        "(\\.xml$)",
        "(\\.json$)"
      ],
      "severity": {
        "3": "disabled",
        "5": "disabled",
        "8": "error"
      }
    },
    "Python linting": {
      "type": "flake8",
      "include": "(\\.py$)",
      "exclude": "(^node_modules/)",
      "severity": {
        "E501": "disabled",
        "E303": "disabled",
        "E265": "disabled"
      }
    },
    "JavaScript linting": {
      "type": "jshint",
      "include": "(\\.js$)"
    },
    "CoffeeScript linting": {
      "type": "coffeelint",
      "coffeelint.config": ".coffeelint.config",
      "include": "(\\.coffee$)"
    },
    "PHP syntax check": {
      "type": "php",
      "include": "(\\.php$)",
      "bin": ["php5.5", "php"]
    },
    "PHP linting": {
      "type": "phpcs",
      "include": "(\\.php$)",
      "flags": [
        "--encoding=utf-8",
        "--tab-width=4"
      ]
    }
  }
}